{
  "name": "rankings-core",
  "version": "2.3.1",
  "description": "Swiss + Buchholz standings calculator for TCG/board game events (match points, OMW, GWP, OGWP, SB, safe H2H).",
  "keywords": [
    "swiss",
    "buchholz",
    "tcg",
    "standings",
    "tiebreakers",
    "tournament",
    "one piece tcg",
    "mtg",
    "pokemon"
  ],
  "license": "MIT",
  "author": "Rogue League",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20 <23"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./wasm": {
      "types": "./dist/wasm/index.d.ts",
      "import": "./dist/wasm/index.js",
      "default": "./dist/wasm/index.js"
    },
    "./wasm/ratings.wasm": "./dist/wasm/ratings.wasm",
    "./package.json": "./package.json"
  },
  "overrides": {
    "vite": "6.3.6",
    "esbuild": "^0.25.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "prebuild": "npm run wasm:build",
    "build": "tsc -p tsconfig.build.json && rollup -c",
    "dev": "vitest --watch",
    "test": "vitest run",
    "typecheck": "tsc -p . --noEmit",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run typecheck && npm test && npm run build",
    "wasm:build": "mkdir -p dist/wasm && asc --config wasm/asconfig.json --target release",
    "wasm:dev": "asc --config wasm/asconfig.json --target debug -b dist/wasm/ratings.wasm",
    "bench:swiss": "tsx benchmarks/swiss-standings.bench.ts",
    "bench:roundrobin": "tsx benchmarks/roundrobin-standings.bench.ts",
    "bench:singleelimination": "tsx benchmarks/singleelimination-standings.bench.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.8.1",
    "@vitest/coverage-v8": "^3.2.4",
    "assemblyscript": "^0.28.9",
    "eslint": "^9.38.0",
    "rollup": "^4.52.5",
    "rollup-plugin-copy": "^3.5.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
