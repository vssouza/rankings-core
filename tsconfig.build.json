{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Force TS to treat `src` as the root of the tree
    "rootDir": "src",
    "outDir": "dist",

    // Only emit declaration files; let Rollup handle JS
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "test",
    "tests",
    "**/*.test.ts",
    "dist",
    "wasm/assembly",
    "wasm/dist",
    "public"
  ]
}
